/* RADIO.STYL ======================================= */

.radio-btn
    flexbox()
    flex-flow: row wrap
    align-items: center
    cursor: pointer
    position: relative
    height: 50px

    input[type=radio]
        position: absolute
        visibility: hidden

    label
        flexbox()
        align-items: center
        position: relative
        background: url(../images/check-radio.svg) no-repeat
        background-size: 20px
        background-position: 0 center
        height: 50px
        width: 100%
        box-sizing()
        padding-left: 35px
        z-index: 9
        cursor: pointer
        opacity: .45
        transition(.25s)

    &:hover label
        opacity: .75

    &.check
        opacity: 1

    input[type=radio]:checked ~ .check 
        opacity: 1

    input[type=radio]:checked ~ label
        opacity: 1

    img
        width: 51px
        height: 32px
        border: 1px solid colorGray03
        border-radius(5px)
        overflow: hidden
        margin-right: 5px