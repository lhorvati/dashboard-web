/* BUTTON.STYL ======================================= */


/* Button PURPLE ========================== */
.btn--purple
	background: colorPurple
	color: colorWhite !important
	border-radius: 5px
	transition(.7s)

	&:hover
		background: colorDarkPurple




/* Button RED ========================== */
.btn--red
	background: colorRed
	color: colorWhite !important
	border-radius: 5px
	transition(.7s)

	&:hover
		background: colorDarkRed