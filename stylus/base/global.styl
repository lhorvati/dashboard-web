/* GLOBAL.STYL ======================================= */


/* overwrites ========================== */
html, body, div, table, p, input
	color: colorDarkGray
	font-family: font1
	font-size: 14px


.show
	display: block
.hide
	display: none !important
.desktop-hide
	display: none
.desktop-show
	display: block


section
	margin: 0 auto

.container
	max-width: 960px
	margin: 0 auto

.container-jumbo
	max-width: 1340px
	margin: 0 auto

.section-row
	width: 100%
	position: relative
	clear: both


/* H1 - H6 Headings ========================== */
h2,
h3,
h4
	font-family: font1
	margin: 0
	padding: 0

h2
	font-size: 16px
	font-weight: 400

h3
	font-size: 18px
	color: colorBlue
	font-weight: 300
	padding-bottom: 20px

h4
	font-size: 14px
	color: colorWhite
	font-weight: 100
	opacity: .5





