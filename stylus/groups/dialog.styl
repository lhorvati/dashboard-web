/* DIALOG.STYL ======================================= */

.dialog-wrap
    background: colorBlack03
    position: fixed
    top: 0
    bottom: 0
    left: 0
    right: 0
    width: 100vw
    height: 100vh
    z-index: 100
    flexbox()
    flex-center()
    visibility: hidden
    opacity: 0
    transition(.5s)

    &.fadeIn
        visibility: visible
        opacity: 1


    .dialog
        min-width: 640px
        min-height: 170px
        background: colorWhite
        color: colorGray
        font-size: 16px
        box-sizing()
        padding: 30px
        border-radius(2px)
        box-shadow(shadowLvl5)

        .dialog-section
            flexbox()
            justify-content: center
            margin: 20px 0
            color: colorGray2
            font-size: 20px

        .dialog__title
            font-size: 20px
            font-weight: 500
            color: colorBlack

        .dialog__text
            font-size: 16px
            font-weight: 400
            color: colorGray
            margin: 20px 0 30px 0

        .dialog__buttons
            flexbox()
            flex-flow: row nowrap
            justify-content: flex-end


.pricing-plans .dialog
    min-width: 1000px
    padding: 30px 30px 20px 30px

.plans
    flexbox()
    flex-flow: row nowrap
    justify-content: space-between

    .plans-item
        box-sizing()
        padding: 20px 10px
        border: 1px solid colorPurple
        border-radius(2px)
        text-align: center
        width: 180px

        .plans-item__title
            color: colorPurple
            font-size: 20px
            font-weight: 400
        .plans-item__price
            color: colorPurple
            font-size: 50px
            font-weight: 100
            margin: 40px 0 30px 0
        .plans-item__billing
            color: colorGray2
            font-size: 12px
            font-weight: 100
            line-height: 15px
            height: 34px
        .plans-item__button
            flexbox()
            flex-center()
            color: colorDarkGray
            font-size: 18px
            font-weight: 600
            margin: 30px 0
            height: 34px
        .plans-item__features
            color: colorGray2
            font-size: 12px
            font-weight: 100
            line-height: 15px
            text-align: left

            ul 
                padding-left: 15px
                li
                    list-style-type: circle
                    display: list-item
                    margin-bottom: 5px
