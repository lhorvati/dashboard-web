/* PROFILE.STYL ======================================== */

#profile.profile
    position: absolute
    right: 8px
    top: 55px
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
    cursor: auto
    overflow: visible
    z-index: 30
    display: none

.profile::before
    position: absolute
    content: ''
    display: block
    border-color: transparent
    border-style: dashed dashed solid
    border-width: 0px 5.5px 5.5px
    width: 0
    border-bottom-color: #d5d5d5
    top: -6px
    right: 10px

.profile-wrap
    position: relative
    width: 300px
    flexbox()
    flex-flow: column nowrap
    background: #f1f1f1
    overflow: auto
    color: #000
    
    a
      text-decoration: none

    .profile-top
        width: 100%

    /* Profile Row */
    .profile-row
        width: 100%
        flexbox()
        flex-flow: row nowrap
        align-items: center
        overflow: hidden
        box-sizing()
        padding: 0 16px
        
        &.f-center
          justify-content: center

        .profile-row__desc
            flexbox()
            flex-flow: column nowrap
            justify-content: center
            align-items: flex-start
            min-height: 56px
            flex: 1


            
