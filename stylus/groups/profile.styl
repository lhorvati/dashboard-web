/* PROFILE TOP ========== */
.profile-wrap .profile-top
    flexbox()
    flex-flow: column nowrap
    position: relative
    z-index: 1000
    background: #f1f1f1


    /* MANAGED ROW */
    .managed-row
        width: 100%
        height: 40px
        background: #d5d5d5
        box-sizing()
        padding: 0 16px
        font-size: 9px
        flexbox()
        align-items: center

    /* PROFILE IMAGE BLOCK */
    .profile-image
        flexbox()
        justify-content: center
        align-items: center
        width: 100px
        height: 100px
        font-size: 18px
        font-weight: 400
        box-sizing()
        border-radius: 100%
        background: #fff
        // margin: 10px auto 0 auto
        position: absolute
        margin-top: 5px
        z-index: 10
        
        .profile-image__center
            flexbox()
            flex-flow: column nowrap
            justify-content: center
            align-items: center

            .profile-image__center--prim
                color: #7f3f98
                font-size: 26px
                font-weight: 600
            
            .profile-image__center--sec
                color: #393939
                font-size: 9px
                text-transform: uppercase
                
    /* PROFILE PIE */
    .profile-pie-left,
    .profile-pie-right
        flexbox()
        justify-content: center
        align-items: center
        width: 110px
        height: 110px
        box-sizing()
        border-radius: 100%
        background: #d5d5d5
        margin-top: 10px

    .profile-pie-left
        position: relative
        background: linear-gradient(90deg, #fff 50%, transparent 50%),linear-gradient(-270deg, #7f3f98 50%, #fff 50%)
      
    .profile-pie-right
        position: absolute
        z-index: 1
        margin-top: 5px
        margin-left: -1px
        background: linear-gradient(90deg, #fff 50%, transparent 50%), linear-gradient(-270deg, #7f3f98 50%, transparent 50%)


    /* Profile Details Block */
    .profile-details
        width: 100%
        flexbox()
        flex-flow: column nowrap
        margin: 15px 0
        text-align: center

        .profile-details__username,
        .profile-details__email
            ellipsis()

        .profile-details__username
            text-transform: capitalize
            margin-bottom: 3px
            font-size: 16px
            line-height: 18px
        
        .profile-details__email
            text-transform: lowercase
            font-size: 12px
            line-height: 14px
            opacity: .7

    


/* Dashboard bottun align */
.dashboard-wrap a
        margin: 0 auto
    
    
    .profile-steps
        width: 100%
        flexbox()
        flex-flow: column nowrap
        margin: 24px 0 16px 0
        font-size: 12px

        .profile-steps__top
            color: #717171
            margin-bottom: 5px
            font-size: 12px
            text-align: left

        .profile-steps__bot
            flexbox()
            flex-flow: row nowrap
            align-items: center
            font-size: 10px

            .profile-steps__sec--icon
                flexbox()
                flex-shrink: 0
                width: 16px
                height: 16px
                background: url("img/dialog/check.svg") center no-repeat
                background-size: 14px

            .profile-steps__sec--text
                margin-left: 5px


