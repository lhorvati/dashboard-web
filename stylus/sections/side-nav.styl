/* SIDE-NAV.STYL ======================================= */

.side-nav
    width: 200px
    background: #e0e0e0
    transition(.5s)

    .mobile-nav-close
        position: absolute
        top: 10px
        right: 10px
        width: 50px
        height: 50px
        flexbox()
        flex-center()
        display: none

        svg
            width: 24px
            height: 24px

    ul 
        padding-top: 40px
        box-sizing()

        li
            position: relative
            margin-bottom: 14px

            a
                font-size: 13px
                font-weight: 400
                color: #000
                line-height: 1.5
                margin-left: 20px

                &.active
                    font-weight: 700

                &.active::before
                    position: absolute
                    display: block
                    content: ''
                    width: 2px
                    height: 100%
                    background: #000
