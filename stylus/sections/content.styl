/* CONETENT.STYL ======================================= */


.main
    background: #eee
    width: calc(100% - 200px)
    position: relative
    box-sizing()
    padding: 30px 5%

    .main__row
        flexbox()
        flex-flow: row wrap
        justify-content: space-between

        .main__row-item
            width: calc(50% - 15px)

    .main__col2
        width: 50%

        &:first-child
            margin-right: 30px












